<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_vid_thumbnail"
        android:layout_width="111dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView_video_title"
        android:layout_width="293dp"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:text="Video Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_channel"
        app:layout_constraintTop_toBottomOf="@+id/imv_vid_thumbnail" />

    <TextView
        android:id="@+id/textView_channel_name"
        android:layout_width="288dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="Chanel name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_channel"
        app:layout_constraintTop_toBottomOf="@+id/textView_video_title" />

    <ImageView
        android:id="@+id/imv_channel"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>